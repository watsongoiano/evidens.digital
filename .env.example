# Exemplo de variáveis de ambiente para o projeto
# Copie este arquivo para .env e preencha com seus valores

# Configuração da aplicação
SECRET_KEY=your-secret-key-here
FLASK_ENV=production
FLASK_DEBUG=false

# Configuração do banco de dados
DATABASE_URL=sqlite:///app.db

# Configuração da OpenAI (se aplicável)
OPENAI_API_KEY=your-openai-api-key-here

# URLs da API (para configuração do frontend)
API_BASE_URL=https://your-backend-api.com
NETLIFY_SITE_URL=https://your-site.netlify.app

# Configurações de analytics
ANALYTICS_ENABLED=true

# Configurações de CORS
CORS_ORIGINS=https://your-site.netlify.app,https://localhost:3000
# OAuth Configuration
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

APPLE_CLIENT_ID=your-apple-client-id
APPLE_CLIENT_SECRET=your-apple-client-secret
APPLE_KEY_ID=your-apple-key-id
APPLE_TEAM_ID=your-apple-team-id

# Security Configuration
ARGON2_TIME_COST=2
ARGON2_MEMORY_COST=65536
ARGON2_PARALLELISM=1

# Rate Limiting
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# Email Configuration (for password reset)
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-password
